{{! @glint-nocheck: not typesafe yet }}
{{#if this.showCard}}
  <AuCard
    @flex={{true}}
    @divided={{true}}
    @isOpenInitially={{true}}
    @expandable={{true}}
    @shadow={{true}}
    @size='small'
    @disableAuContent={{true}}
    as |c|
  >
    <c.header>
      <AuHeading @level='3' @skin='6'>
        {{t 'variable-plugin.insert-variable'}}
      </AuHeading>
    </c.header>
    <c.content>
      <AuContent>
        <PowerSelect
          @allowClear={{false}}
          @searchEnabled={{false}}
          @options={{@variableTypes}}
          @selected={{this.selectedVariable}}
          @onChange={{this.updateSelectedVariable}}
          as |variable|
        >
          {{variable.label}}
        </PowerSelect>
        {{#if this.selectedVariable}}
          <this.selectedVariable.component
            @controller={{this.controller}}
            @options={{this.selectedVariable.options}}
            @templateMode={{@templateMode}}
          />
        {{/if}}
      </AuContent>
    </c.content>
  </AuCard>
{{/if}}