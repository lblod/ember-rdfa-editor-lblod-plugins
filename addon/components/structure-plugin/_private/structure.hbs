<div class='say-structure' {{did-update this.onAttrsUpdate this.titleAttr}} {{on "focus" this.focusInner}}>
  <div class='say-structure__header' contenteditable='false'>

    <h4>Chapter I.</h4>
    <this.ProseMirrorEditor
      @schema={{this.titleSchema}}
      @inline={{true}}
      @content={{this.titleContent}}
      @onInit={{this.onInitInnerEditor}}
      @onUpdate={{this.onTitleUpdate}}
      @onFocus={{this.onInnerEditorFocus}}
      @getPos={{@getPos}}
      @outerView={{@view}}
      @controller={{@controller}}
      class='say-structure__title'
    />
  </div>
  <div class='say-structure__content {{if this.isEmpty "say-empty" ""}}'>
    {{yield}}
  </div>
</div>