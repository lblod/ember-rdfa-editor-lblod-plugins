<div class="citaten--decision-list-item {{if @fullSize "au-u-padding-small"}}" ...attributes>
  <p class="citaten--decision-title {{if @fullSize "au-u-h6 au-u-medium" "au-u-h-functional"}}">
    {{if @fullSize (capitalize @legalDocument.fullTitle) @legalDocument.title}}
  </p>
  {{#if (and @fullSize @legalDocument.publicationDate)}}
    <AuPill
      class="au-u-margin-top-small au-u-margin-bottom-small"
      @skin="border"
      @icon="calendar"
      @iconAlignment="left">
      {{@legalDocument.publicationDate}}
    </AuPill>
  {{/if}}
  {{#if @fullSize}}
    <div>
      <AuButtonGroup @inline={{false}}>
        <AuButton
          @skin="primary"
          @icon="plus-text"
          @iconAlignment="left"
          {{on "click" @onCitationInsert}}>
          {{t "citaten-plugin.references.insert"}}
        </AuButton>
        {{#if this.isBesluit}}
          {{#if this.hasPublicationLink}}
            <AuLinkExternal
              @skin="button"
              @icon="link-external"
              @iconAlignment="left"
              href={{@legalDocument.meta.publicationLink}}
              rel="noreferrer noopener">
              {{t "citaten-plugin.references.lookup-publicatie"}}
            </AuLinkExternal>
          {{else}}
            <AuButton
              @skin='button'
              @icon="link-external"
              @iconAlignment="left"
              @disabled={{true}}
            >
              {{t "citaten-plugin.references.publicatie-non-available"}}
            </AuButton>
          {{/if}}
        {{else}}
          <AuButton
            @skin="secondary"
            @icon="manual"
            @iconAlignment="left"
            {{on "click" @onCitationDetails}}>
            {{t "citaten-plugin.references.details"}}
          </AuButton>
        {{/if}}

      </AuButtonGroup>
    </div>
  {{else}}
    <div class="au-u-flex au-u-flex--row au-u-flex--no-wrap au-u-flex--between au-u-margin-top-tiny">
      <AuButton
        @skin="link-secondary"
        @icon="plus-text"
        @iconAlignment="left"
        class="au-u-h-functional"
        {{on "click" @onCitationInsert}}>
        {{t "citaten-plugin.references.insert"}}
      </AuButton>
      {{#if this.isBesluit}}
        {{#if this.hasPublicationLink}}
          <AuLinkExternal
            @skin="link"
            @icon="link-external"
            @iconAlignment="left"
            href={{@legalDocument.meta.publicationLink}}
            rel="noreferrer noopener"
            class="au-u-h-functional"
          >
            {{t "citaten-plugin.references.lookup-publicatie-short"}}
          </AuLinkExternal>
        {{else}}
          <AuButton
            @skin='link'
            @disabled={{true}}
            class="au-u-h-functional"
          >
            {{t "citaten-plugin.references.publicatie-non-available-short"}}
          </AuButton>
        {{/if}}
      {{else}}
        <AuButton
          @skin="link"
          @icon="manual"
          @iconAlignment="left"
          class="au-u-h-functional"
          {{on "click" @onCitationDetails}}>
          {{t "citaten-plugin.references.details"}}
        </AuButton>
      {{/if}}
    </div>
  {{/if}}
</div>
