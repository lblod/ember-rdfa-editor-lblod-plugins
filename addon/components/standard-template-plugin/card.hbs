<StandardTemplatePlugin::TemplateProvider
  @controller={{@controller}}
  @templates={{@templates}}
  as |provider|
>
  {{#if provider.hasApplicableTemplates}}
    {{#each provider.applicableTemplates as |template|}}
      <li class='au-c-list__item'>
        <AuButton
          @skin='link'
          @icon={{this.AddIcon}}
          @iconAlignment='left'
          {{on 'click' (fn provider.insert template)}}
        >
          {{template.title}}
        </AuButton>
      </li>
    {{/each}}
  {{/if}}
</StandardTemplatePlugin::TemplateProvider>